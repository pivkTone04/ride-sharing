@model RideSharing.Models.Vehicle

@{
    ViewData["Title"] = "Vehicle details";
    bool isInUse = Model.Rides != null && Model.Rides.Any();
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Make</dt>
        <dd class="col-sm-10">@Model.Make</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Model year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">License plate</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>

        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Color</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Created at</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

        <dt class="col-sm-2">Updated at</dt>
        <dd class="col-sm-10">@Model.UpdatedAt.ToLocalTime().ToString("g")</dd>
    </dl>
</div>

<div>
    @if (isInUse)
    {
        <button class="btn btn-danger" disabled>Delete</button>
        <button class="btn btn-warning" disabled>Edit</button>
        <p class="text-warning mt-2">This vehicle is in use and cannot be edited or deleted.</p>
    }
    else
    {
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
